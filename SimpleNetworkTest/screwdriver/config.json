{
    "version": 2,
    "shared": {
        "notification_email": "heemeng@yahoo-inc.com",
        "template": "build",
        "app": "com.Megadodo.SimpleNetworkTest",
        "xcode_version": "5",
        "sdk": "iphoneos7.0",
        "workspace": "SimpleNetworkTest.xcworkspace",
        "scheme": "SimpleNetworkTest",
        "coverage_type": "none",
        "configuration": "Debug",
        "build": {
            "test": {
                "task": "fake-test"
            }
        }
    },
    "jobs": {
        "component": {
           "sdk": "iphonesimulator7.0",
           "build": {
                "test": {
                    "task": "xcode-test",
                    "targets": [
                        {
                            "workspace": "SimpleNetworkTest.xcworkspace",
                            "scheme": "SimpleNetworkTest"
                        }
                    ]
                }
           },
           "triggers": [ "debug", "release" ]
        },
        "debug": {
           "flavor": "debug",
           "configuration": "Debug"
        },
        "release": {
           "flavor": "release",
           "configuration": "Release"
        },
        "iphone-ui-tests": {
            "flavor": "debug",
            "configuration": "Debug",
            "sdk": "iphonesimulator7.0",
            "destination": "OS=7.0,name=iPhone Retina (3.5-inch)",
            "build": {
                "compile": {},
                "publish": {
                    "task": "none"
                },
                "test": {
                    "after": [
                              {
                              "name": "set simulator",
                              "task": "script",
                              "command": "choose_sim_device 'iPhone Retina (3.5-inch)' 'iOS 7.0.3 (11B508)'"
                              },
                              {
                              "task": "xcode-functional",
                              "test_patterns": {
                              "includes": [
                                           "SimpleNetworkTestFunctionalTest/SimpleNetworkTestFuncTest.js"
                                           ]
                              }
                              }
                              ]
                }
            }
        },
       "devicelab": {
            "sdk": "iphoneos",
            "device_test_dir": "SimpleNetworkTestFunctionalTest",
            "device_test_file": "SimpleNetworkTestFuncTest.js",
            "device_type_id": "54",
            "test_type": "uiautomation",
            "build": {
                "test": {
                    "task": "xcode5-device-test",
                    "targets": [
                        {
                            "target": "SimpleNetworkTest"
                        }
                    ]
                },
                "publish": {
                    "task": "none"
                }
            }
       }
    }
}
